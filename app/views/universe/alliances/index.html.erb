<% set_meta_tags title: "Alliances",
                 canonical: universe_alliances_url,
                 description: "EVE Online Alliances",
                 og: {
                   title: "EVE Online Alliances",
                   url: universe_alliances_url,
                   type: "website",
                   site_name: "EveMonk: EVE Online management suite",
                   locale: "en_US",
                   description: "EVE Online Alliances",
                   image: @alliances.first&.icon_medium
                 } %>

<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to("Home", root_path) %></li>
        <li class="breadcrumb-item active" aria-current="page">Alliances</li>
      </ol>
    </nav>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th colspan="2" class="text-center">Name</th>
          <th class="text-right">Corps</th>
          <th class="text-right">Members</th>
        </tr>
      </thead>
      <tbody>
        <% @alliances.each do |alliance| %>
          <tr>
            <td class="align-middle text-center border-right-0 m-0 p-2">
              <%= image_tag(alliance.icon_tiny,
                            alt: alliance.name,
                            class: "rounded border",
                            size: "34x34",
                            loading: "lazy") %>
            </td>
            <td class="align-middle text-break border-left-0">
              <%= link_to(alliance.name, universe_alliance_path(alliance)) %>
            </td>
            <td class="align-middle text-right">
              <%= alliance.formatted_corporations_count %>
            </td>
            <td class="align-middle text-right">
              <%= alliance.formatted_characters_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="w-100"></div>

  <%= paginate @alliances %>
</div>
