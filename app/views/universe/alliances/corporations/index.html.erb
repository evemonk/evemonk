<%= turbo_frame_tag "universe:alliance:#{@alliance.id}:corporations" do %>
  <h4 class="text-center">Corporations (<%= @corporations.size %>)</h4>

  <table class="table table-dark table-striped table-bordered">
    <thead>
      <tr>
        <th colspan="2" class="text-center">Name</th>
        <th class="text-end">Members</th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: "corporation", collection: @corporations %>
    </tbody>
  </table>
<% end %>
