<% set_meta_tags title: "Corporations",
                 canonical: universe_corporations_url,
                 description: "EVE Online Corporations",
                 og: {
                   title: "EVE Online Corporations",
                   url: universe_corporations_url,
                   type: "website",
                   site_name: "EveMonk: EVE Online management suite",
                   locale: "en_US",
                   description: "EVE Online Corporations",
                   image: @corporations.first&.icon_medium
                 } %>

<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to("Home", root_path) %></li>
        <li class="breadcrumb-item active" aria-current="page">Corporations</li>
      </ol>
    </nav>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
    <table class="table table-dark table-striped table-bordered">
      <thead>
        <tr>
          <th colspan="2" class="text-center">Name</th>
          <th class="text-end">Members</th>
        </tr>
      </thead>
      <tbody>
        <% @corporations.each do |corporation| %>
          <tr>
            <td class="align-middle text-center border-end-0 m-0 p-2">
              <%= image_tag(corporation.icon_small,
                            alt: corporation.name,
                            class: "rounded border",
                            size: "34x34",
                            loading: "lazy") %>
            </td>
            <td class="align-middle text-break border-start-0">
              <%= link_to(corporation.name, universe_corporation_path(corporation.corporation_id)) %>
            </td>
            <td class="align-middle text-end">
              <%= corporation.formatted_member_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="w-100"></div>

  <%= paginate @corporations %>
</div>
