<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to("Home", root_path) %></li>
        <li class="breadcrumb-item"><%= link_to("My characters", characters_path) %></li>
        <li class="breadcrumb-item"><%= link_to(@character.name, character_path(@character)) %></li>
        <li class="breadcrumb-item active" aria-current="page">Blueprints</li>
      </ol>
    </nav>
  </div>
</div>

<%= render CharacterNavBarComponent.new(character: @character, current_page: :blueprints) %>

<hr class="text-dark">

<div class="row">
  <%= render partial: "characters/character_card_info",
             locals: {
               character: @character,
               full: false
             } %>

  <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
    <%= turbo_frame_tag dom_id(@character, :blueprints),
                        src: character_blueprints_lists_path(@character),
                        target: "_top" do %>
      <h4 class="text-center text-break">Blueprints</h4>

      <h4 class="text-center">Loading...</h4>
    <% end %>
  </div>
</div>
