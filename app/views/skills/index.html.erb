                        <%#= image_tag(skill.icon_small, class: "card-img", alt: skill.name) %>
<!--                      </div>-->
<!--                      <div class="col-md-8">-->
<!--                        <div class="card-body">-->
<!--                          <h4 class="card-title"><%##= link_to(skill.name, universe_type_path(skill.type_id)) %></h4>-->
<!--                        </div>-->
<!--                      </div>-->
<!--                    </div>-->
<!--                  </div>-->

<!--                </div>-->
              <%# end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
