<% set_meta_tags title: "Largest alliances and corporations",
                 description: "Largest alliances and corporations in EVE Online",
                 og: {
                   title: "Largest alliances and corporations in EVE Online",
                   url: root_url,
                   type: "website",
                   site_name: "EveMonk: EVE Online management suite",
                   locale: "en_US",
                   description: "Largest alliances and corporations in EVE Online",
                   image: @alliances.first&.icon_medium,
                 } %>

<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home</li>
      </ol>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
    <h4 class="text-center">
      <%= link_to(t(".alliances_html"), universe_alliances_path, "data-hotkey": "a") %>
    </h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th colspan="2" class="text-center">Name</th>
          <th class="text-right">Corps</th>
          <th class="text-right">Members</th>
        </tr>
      </thead>
      <tbody>
        <% @alliances.each do |alliance| %>
          <tr>
            <td class="text-center align-middle border-right-0 m-0 p-2">
              <%= image_tag(alliance.icon_tiny,
                            alt: alliance.name,
                            class: "rounded border",
                            size: "34x34",
                            loading: "lazy") %>
            </td>
            <td class="text-break align-middle border-left-0">
              <%= link_to(alliance.name, universe_alliance_path(alliance.alliance_id)) %>
            </td>
            <td class="text-right align-middle">
              <%= alliance.formatted_corporations_count %>
            </td>
            <td class="text-right align-middle">
              <%= alliance.formatted_characters_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
    <h4 class="text-center">
      <%= link_to(t(".corporations_html"), universe_corporations_path, "data-hotkey": "c") %>
    </h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th colspan="2" class="text-center">Name</th>
          <th class="text-right">Members</th>
        </tr>
      </thead>
      <tbody>
        <% @corporations.each do |corporation| %>
          <tr>
            <td class="text-center align-middle border-right-0 m-0 p-2">
              <%= image_tag(corporation.icon_tiny,
                            alt: corporation.name,
                            class: "rounded border",
                            size: "34x34",
                            loading: "lazy") %>
            </td>
            <td class="text-break align-middle border-left-0">
              <%= link_to(corporation.name, universe_corporation_path(corporation.corporation_id)) %>
            </td>
            <td class="text-right align-middle">
              <%= corporation.formatted_member_count %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
