#!/usr/bin/env bash

# e.g. "v1.10.2"
VERSION=$1

if [ -z "$VERSION" ]; then
  echo "Usage: $0 <version>"
  exit 1
fi

mkdir -p app/views/shared/icons

curl -s "https://raw.githubusercontent.com/twbs/icons/$VERSION/icons/arrow-repeat.svg" > app/views/shared/icons/arrow-repeat.svg
curl -s "https://raw.githubusercontent.com/twbs/icons/$VERSION/icons/eye.svg" > app/views/shared/icons/eye.svg
curl -s "https://raw.githubusercontent.com/twbs/icons/$VERSION/icons/eye-slash.svg" > app/views/shared/icons/eye-slash.svg
curl -s "https://raw.githubusercontent.com/twbs/icons/$VERSION/icons/square.svg" > app/views/shared/icons/square.svg
curl -s "https://raw.githubusercontent.com/twbs/icons/$VERSION/icons/square-fill.svg" > app/views/shared/icons/square-fill.svg
curl -s "https://raw.githubusercontent.com/twbs/icons/$VERSION/icons/square-half.svg" > app/views/shared/icons/square-half.svg
